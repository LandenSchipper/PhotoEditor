Display
<Display>:
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            size_hint: 1,0.3
            spacing: 1
            TextInput:
                id: ans
                text: ""

            Button:
                text: "load Image"
                on_press: root.display_image()
            Button:
                text: "blue to green"
                on_press: root.blue_to_green()
            Button:
                text: "pointillism"
                on_press: root.pointillism()
            Button:
                text: "pixelate"
                on_press: root.pixelate()
            Button:
                text: "red"
                on_press: root.red_filter()
            Button:
                text: "sepia"
                on_press: root.sepia()
            Button:
                text: "invert"
                on_press: root.invert()
        Image:
            id: IMG
            source: root.loadImage()

